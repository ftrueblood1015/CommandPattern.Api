@page "/format"
@page "/format/{EntityId:int}"

@using CommandPattern.BlazorServer.Shared.Components;
@using CommandPattern.BlazorServer.Shared;
@using CommandPattern.Domain.Entities.Mtg;

@inherits DetailPageBase<Format>;

<MudText @attributes='Splats.PageHeader("FormatDetail")'>Format Detail</MudText>

<MudForm @ref="Form" @bind-IsValid="@success">
    <MudPaper Class="pa-4">
        <EntityBaseFrom Entity="@Entity"></EntityBaseFrom>
    </MudPaper>
    <MudPaper Class="pa-4">
        <MudButton @attributes="Splats.NewButton()" OnClick="@(() => Save(Entity!, "formats"))">Save</MudButton>
        <MudButton @attributes="Splats.ResetButton()" OnClick="@(()=>Form!.ResetAsync())" Class="mx-2">Reset</MudButton>
        <MudButton @attributes="Splats.CancelButton()" OnClick="@(() => Cancel("formats"))">Cancel</MudButton>
    </MudPaper>
</MudForm>
